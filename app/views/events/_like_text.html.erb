<strong>
  <% likes.each.with_index do |like, index| %>
      <% if likes.size == 1 %>
          <%= like.user.name %> </strong> is interested in.
      <% elsif like == likes.last %>
          </strong>and<strong>
      <%= + like.user.name %></strong> are interested in.
      <% elsif index > 1 %>
          </strong><%= "and " + (likes.size-index).to_s + " others " %> are interested in.
          <% break %>
      <% elsif index==likes.size-2 || index==1%>
          <%= like.user.name %>
      <% else %>
          <%= like.user.name + ", " %>
      <% end %>
  <% end %>
</strong>