<div class="row justify-content-md-center profile-wrapper">
<p class="h1 text-light"><i class="fas fa-calendar-alt"></i>ã€€Best Populer photos for the past one week</p>
  <div class="user-tab">
    <div class="tab-content pb-3" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-posts" role="tabpanel" aria-labelledby="nav-posts-tab">
        <div class="row sakura">          
        <% sum=1 %>

          <% @rank.each do |rank| %>
  <div class="col-4">
    <div><p class="display-4"><span class="text-primary">
      <% if sum==1 %><i class="fas fa-carrot" style="color:#FFD700;"></i>
      <% elsif sum==2 %><i class="fas fa-carrot" style="color:#C0C0C0;"></i>
      <% else %><i class="fas fa-carrot" style="color:#CD7F32;"></i>
      <%end%><%= sum.ordinalize %></span></p></div><br>
    <% sum += 1 %>
    
    <%= link_to post_path(rank) do %>
      <div class="rank-stat d-flex justify-content-center align-items-center">
        <span>
          <i class="fas fa-carrot" aria-hidden="true"></i>
          <%= rank.loves.size %>
          <i class="ml-3 fas fa-comment-alt" aria-hidden="true"></i>
          <%= rank.comments.size %>
        </span>
      </div>
      
      <%= link_to post_path(rank) do %>
  <% if rank.photos.size == 1 %>
    <%= image_tag rank.photos.first.image.url(:standard), class: "card-img-top image-preview" %>
  <% else %>
    <div class="carousel slide" data-ride="carousel" id="carousel-post-<%= rank.id %>">
      <div class="carousel-inner">
        <% rank.photos.each do |photo| %>
          <% if photo == rank.photos.first %>
            <div class="carousel-item active">
          <% else %>
            <div class="carousel-item">
          <% end %>
              <%= image_tag photo.image.url(:standard), class: "card-img-top image-preview" %>
            </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carousel-post-<%= rank.id %>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-post-<%= rank.id %>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% end %>
<% end %>
      
    <% end %>
  </div>
<% end %>
        </div>
      </div>
    </div>
  </div>

</div>
